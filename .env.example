# ===========================================
# SoldierIQ Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Application
APP_NAME=SoldierIQ Backend
ENVIRONMENT=production
DEBUG=false

# Authentication (IMPORTANT: Change in production!)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database - MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=soldieriq

# Vector Database - Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=soldieriq-documents

# LLM APIs
OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key
GROQ_API_KEY=your-groq-api-key

# iDrive E2 Storage (S3-compatible)
IDRIVEE2_ENDPOINT_URL=https://s3.us-west-1.idrivee2.com
IDRIVEE2_ACCESS_KEY_ID=your-access-key
IDRIVEE2_SECRET_ACCESS_KEY=your-secret-key
IDRIVEE2_BUCKET_NAME=soldieriq-documents
PRESIGNED_URL_EXPIRATION=604800

# Document Processing
UNSTRUCTURED_API_KEY=your-unstructured-api-key
UNSTRUCTURED_API_URL=https://api.unstructuredapp.io/general/v0/general

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# API URL - Point to your backend
# For development: http://localhost:8001
# For production: https://your-backend-domain.com
VITE_API_URL=http://localhost:8001

# Optional: User/Org IDs (not needed with authentication)
VITE_USER_ID=
VITE_ORGANIZATION_ID=
